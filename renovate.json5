{
  // Base config - https://github.com/giantswarm/renovate-presets/blob/main/default.json5
  "extends": [
    "github>giantswarm/renovate-presets:default.json5"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["test/hack/bin/fetch-tools.sh"],
      "matchStrings": [
        "ARCHITECT_VERSION=\"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "giantswarm/architect",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["test/hack/bin/fetch-tools.sh"],
      "matchStrings": [
        "HELM_VERSION=\"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "helm/helm",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
